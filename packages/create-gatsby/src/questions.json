[
  {
    "type": "input",
    "name": "project",
    "message": "What would you like to name the folder where you site will be created?",
    "initial": "my-gatsby-site"
  },
  {
    "type": "select",
    "name": "cms",
    "message": "Will you be using a CMS?",
    "hint": "Use arrow keys to move, and enter to select",
    "choices": [
      { "message": "No (or I'll add it later)", "value": "" },
      { "message": "WordPress", "value": "wordpress" },
      { "message": "Contentful", "value": "contentful" },
      { "message": "DatoCMS", "value": "datocms" },
      { "message": "Sanity", "value": "sanity" },
      { "message": "AgilityCMS", "value": "agility" }
    ]
  },
  {
    "type": "select",
    "name": "styling",
    "message": "Would you like to install a styling system?",
    "hint": "Use arrow keys to move, and enter to select",
    "choices": [
      { "message": "No (or I'll add it later)", "value": "" },
      { "message": "CSS Modules/PostCSS", "value": "postcss" },
      { "message": "Styled Components", "value": "styled-components" },
      { "message": "Emotion", "value": "emotion" },
      { "message": "Sass", "value": "sass" },
      { "message": "Theme-UI", "value": "themeui" }
    ]
  },
  {
    "type": "multiselect",
    "name": "features",
    "message": "Would you like to install additional features with other plugins?",
    "hint": "Use arrow keys to move, spacebar to select, and enter to confirm your choices",
    "choices": [
      {
        "name": "Add the Google Analytics tracking script",
        "value": "gatsby-plugin-google-analytics"
      },
      { "name": "Add an automatic sitemap", "value": "gatsby-plugin-sitemap" },
      { "name": "Add MDX support", "value": "gatsby-plugin-mdx" },
      {
        "name": "Enable offline functionality",
        "value": "gatsby-plugin-offline"
      },
      { "name": "Generate a manifest file", "value": "gatsby-plugin-manifest" }
    ]
  }
]
